apiVersion: v1
kind: Secret
metadata:
  name: ccg-backend-secret
type: Opaque
stringData:
  CLERK_SECRET_KEY: "your-clerk-secret-key-here"
  GROQ_API_KEY: "your-groq-api-key-here"
  DB_USER: "ccg_user"
  DB_PASSWORD: "ccg_pass"
  DB_HOST: "ccg-mysql"
  DB_NAME: "ccg_db"
  DATABASE_URL: "mysql+pymysql://ccg_user:ccg_pass@ccg-mysql:3306/ccg_db"
